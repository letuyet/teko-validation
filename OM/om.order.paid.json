{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "definitions": {
    "nonEmptyString": {
      "type": "string",
      "minLength": 1
    },
    "nonEmptyInteger": {
      "type": "integer",
      "minimum": 1
    },
    "nonEmptyNumber": {
      "type": "number",
      "minLength": 1
    }
  },
  "type": "object",
  "required": [
    "orderId",
    "payId",
    "paidAt",
    "payCode",
    "exportCode",
    "payerName",
    "paidObject",
    "grandTotal",
    "totalDiscount",
    "previousPaidAmount",
    "paidAmount",
    "payments",
    "opsId",
    "storeId"
  ],
  "properties": {
    "orderId": {
      "$ref": "#/definitions/nonEmptyString"
    },
    "payId": {
      "$ref": "#/definitions/nonEmptyString"
    },
    "paidAt": {
      "$ref": "#/definitions/nonEmptyNumber",
      "maximum": "$CURRENT_TIMESTAMPS"
    },
    "payCode": {
      "$ref": "#/definitions/nonEmptyString"
    },
    "exportCode": {
      "$ref": "#/definitions/nonEmptyString"
    },
    "payerName": {
      "$ref": "#/definitions/nonEmptyString"
    },
    "paidObject": {
      "$ref": "#/definitions/nonEmptyInteger"
    },
    "objectName":{
      "type": [
        "string",
        "null"
      ]
    },
    "objectCode":{
      "type": [
        "string",
        "null"
      ]
    },
    "objectPhone":{
      "type": [
        "string",
        "null"
      ]
    },
    "note": {
      "type": [
        "string",
        "null"
      ]
    },
    "grandTotal": {
      "$ref": "#/definitions/nonEmptyNumber"
    },
    "totalDiscount": {
      "type": "number",
      "minimum": 0
    },
    "previousPaidAmount": {
      "type": "number",
      "minimum": 0,
      "maximum": {
        "$data": "/grandTotal"
      },
      "exclusiveMaximum": true
    },
    "paidAmount": {
      "type": "number",
      "minimum": 0,
      "maximum": {
        "$data": "/grandTotal"
      }
    },
    "opsId":{
      "$ref": "#/definitions/nonEmptyInteger"
    },
    "storeId":{
      "$ref": "#/definitions/nonEmptyString"
    },
    "payments": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": [
          "paymentId",
          "paymentMethod",
          "amount"
        ],
        "properties": {
          "paymentId": {
            "type": "string",
            "minimum": 0
          },
          "paymentMethod": {
            "type": "string"
          },
          "bankAccount": {
            "type": [
              "string",
              "null"
            ]
          },
          "ref": {
            "type": [
              "string",
              "null"
            ]
          },
          "amount": {
            "type": "integer",
            "minimum": 0
          }
        },
        "allOf": [
          {
            "oneOf": [
              {
                "properties": {
                  "paymentMethod": {
                    "enum": [
                      "CARD"
                    ]
                  },
                  "bankAccount": {
                    "$ref": "#/definitions/nonEmptyString"
                  }
                }
              },
              {
                "properties": {
                  "paymentMethod": {
                    "not": {
                      "enum": [
                        "CARD"
                      ]
                    }
                  },
                  "bankAccount": {
                    "type": ["string", "null"]
                  }
                }
              }
            ],
            "err_msg": "payments.paymentMethod = CARD, payments.bankAccount != null|empty"
          },
          {
            "oneOf": [
              {
                "properties": {
                  "paymentMethod": {
                    "enum": [
                      "CARD"
                    ]
                  },
                  "ref": {
                    "$ref": "#/definitions/nonEmptyString"
                  }
                }
              },
              {
                "properties": {
                  "paymentMethod": {
                    "not": {
                      "enum": [
                        "CARD"
                      ]
                    }
                  },
                  "ref": {
                    "type": ["string", "null"]
                  }
                }
              }
            ],
            "err_msg": "payments.paymentMethod = CARD, payments.ref != null|empty"
          }
        ]
      }
    },
    "allOf": [
      {
        "oneOf": [
          {
            "properties": {
              "paidObject": {
                "enum": [
                  1,
                  3
                ]
              },
              "exportCode": {
                "$ref": "#/definitions/nonEmptyString"
              }
            }
          },
          {
            "properties": {
              "paidObject": {
                "not": {
                  "enum": [
                    1,
                    3
                  ]
                }
              },
              "exportCode": {
                "type": ["string", "null"]
              }
            }
          }
        ],
        "err_msg": "If paidObject = KTV/3PL, exportCode != null|empty"
      },
      {
        "oneOf": [
          {
            "properties": {
              "paidObject": {
                "enum": [
                  1
                ]
              },
              "payerCode": {
                "$ref": "#/definitions/nonEmptyString"
              }
            }
          },
          {
            "properties": {
              "paidObject": {
                "not": {
                  "enum": [
                    1
                  ]
                }
              },
              "payerCode": {
                "type": ["string", "null"]
              }
            }
          }
        ],
        "err_msg": "If paidObject = KTV, payerCode != null|empty"
      }
    ]
  }
}