{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "definitions": {
    "nonEmptyString": {
      "type": "string",
      "minLength": 1
    },
    "nonEmptyInteger": {
      "type": "integer",
      "minimum": 1
    },
    "nonEmptyNumber": {
      "type": "number",
      "minLength": 1
    }
  },
  "type": "object",
  "maxProperties": 22,
  "minProperties": 22,
  "required": [
    "orderId",
    "orderCode",
    "requestCode",
    "storeCode",
    "storeName",
    "storeAddress",
    "inventoryCode",
    "grandTotal",
    "paidAmount",
    "codAmount",
    "debtAmount",
    "debtAccount",
    "debtAccountName",
    "totalDiscount",
    "customerCode",
    "customerName",
    "note",
    "createdAt",
    "purchaseAt",
    "shipDate",
    "addresses",
    "items"
  ],
  "properties": {
    "orderId": {
      "oneOf": [
        {
          "type": "integer"
        },
        {
          "type": "null"
        }
      ]
    },
    "orderCode": {
      "oneOf": [
        {
          "type": "string"
        },
        {
          "type": "null"
        }
      ]
    },
    "requestCode": {
      "$ref": "#/definitions/nonEmptyString",
      "not": {
        "enum": [
          "0"
        ]
      }
    },
    "storeCode": {
      "$ref": "#/definitions/nonEmptyString",
      "not": {
        "enum": [
          "0"
        ]
      }
    },
    "storeName": {
      "$ref": "#/definitions/nonEmptyString"
    },
    "storeAddress": {
      "$ref": "#/definitions/nonEmptyString"
    },
    "inventoryCode":{
      "$ref": "#/definitions/nonEmptyString"
    },
    "grandTotal": {
      "type": "integer",
      "minimum": 0,
      "calculateAndCompare": {
        "operation": [
          {
            "$totalItemsPrice": "/items"
          },
          "-",
          {
            "$data": "/totalDiscount"
          }
        ],
        "err_msg": "grandTotal == sum(rowTotal)-totalDiscount = sum(items.price*items.quantity)-totalDiscount"
      }
    },
    "paidAmount": {
      "type": "integer",
      "minimum": 0
    },
    "codAmount": {
      "type": "integer",
      "minimum": 0,
      "allOf": [
        {
          "calculateAndCompare": {
            "operation": [
              {
                "$data": "/grandTotal"
              },
              "-",
              {
                "$data": "/paidAmount"
              },
              "-",
              {
                "$data": "/debtAmount"
              }
            ]
          },
          "err_msg": "codAmount # grandTotal - paidAmount - debtAmount"
        }
      ]
    },
    "debtAmount": {
      "type": "integer",
      "minimum": 0
    },
    "debtAccount": {
      "oneOf": [
        {
          "type": "string"
        },
        {
          "type": "null"
        }
      ]
    },
    "debtAccountName": {
      "oneOf": [
        {
          "type": "string"
        },
        {
          "type": "null"
        }
      ]
    },
    "totalDiscount": {
      "type": "integer",
      "minimum": 0,
      "maximum": {
        "$totalItemsPrice": "/items"
      }
    },
    "customerCode": {
      "allOf": [
        {
          "oneOf": [
            {
              "type": "null"
            },
            {
              "type": "string"
            }
          ],
          "err_msg": "customerCode is null or numeric string"
        }
      ]
    },
    "customerName": {
      "allOf": [
        {
          "oneOf": [
            {
              "type": "null"
            },
            {
              "$ref": "#/definitions/nonEmptyString",
              "not": {
                "pattern": "^\\d*$"
              }
            }
          ],
          "err_msg": "customerName is null or string"
        }
      ]
    },
    "note": {
      "allOf": [
        {
          "oneOf": [
            {
              "type": "null"
            },
            {
              "type": "string"
            }
          ],
          "err_msg": "note is null or string"
        }
      ]
    },
    "createdAt": {
      "$ref": "#/definitions/nonEmptyInteger"
    },
    "purchaseAt": {
      "$ref": "#/definitions/nonEmptyInteger",
      "minimum": "/createdAt"
    },
    "shipDate": {
      "allOf": [
        {
          "oneOf": [
            {
              "type": "null"
            },
            {
              "type": "integer",
              "minimum": "/createdAt"
            }
          ],
          "err_msg": "shipDate is null or integer"
        }
      ]
    },
    "addresses": {
      "type": "object",
      "maxProperties": 2,
      "minProperties": 2,
      "required": [
        "shipping",
        "billing"
      ],
      "properties": {
        "shipping": {
          "type": "object",
          "maxProperties": 5,
          "minProperties": 5,
          "required": [
            "name",
            "street",
            "addressCode",
            "email",
            "telephone"
          ],
          "properties": {
            "name": {
              "$ref": "#/definitions/nonEmptyString",
              "not": {
                "pattern": "^\\d+$"
              }
            },
            "street": {
              "$ref": "#/definitions/nonEmptyString",
              "not": {
                "pattern": "^\\d+$"
              }
            },
            "addressCode":{
              "oneOf": [
                {
                  "type": "string"
                },
                {
                  "type": "null"
                }
              ]
            },
            "email": {
              "oneOf": [
                {
                  "type": "string"
                },
                {
                  "type": "null"
                }
              ]
            },
            "telephone": {
              "type": "string"
            }
          }
        },
        "billing": {
          "type": "object",
          "maxProperties": 6,
          "minProperties": 6,
          "required": [
            "name",
            "street",
            "email",
            "telephone",
            "company",
            "MaSoThue"
          ],
          "properties": {
            "name": {
              "$ref": "#/definitions/nonEmptyString",
              "not": {
                "pattern": "^\\d+$"
              }
            },
            "street": {
              "oneOf": [
                {
                  "type": "string"
                },
                {
                  "type": "null"
                }
              ]
            },
            "email": {
              "oneOf": [
                {
                  "type": "string"
                },
                {
                  "type": "null"
                }
              ]
            },
            "telephone": {
              "oneOf": [
                {
                  "type": "string"
                },
                {
                  "type": "null"
                }
              ]
            },
            "company": {
              "oneOf": [
                {
                  "type": "string"
                },
                {
                  "type": "null"
                }
              ]
            },
            "MaSoThue": {
              "oneOf": [
                {
                  "type": "string"
                },
                {
                  "type": "null"
                }
              ]
            }
          }
        }
      }
    },
    "items": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "maxProperties": 7,
        "minProperties": 7,
        "required": [
          "sku",
          "name",
          "quantity",
          "price",
          "unitPrice",
          "discountAmount",
          "rowTotal"
        ],
        "properties": {
          "sku": {
            "$ref": "#/definitions/nonEmptyString"
          },
          "name": {
            "$ref": "#/definitions/nonEmptyString",
            "not": {
              "pattern": "^\\d*$"
            }
          },
          "quantity": {
            "$ref": "#/definitions/nonEmptyInteger"
          },
          "price": {
            "type": "integer",
            "minimum": 0,
            "maximum": "/items/unitPrice"
          },
          "unitPrice": {
            "type": "integer",
            "minimum": 0
          },
          "discountAmount": {
            "type": "integer",
            "minimum": 0,
            "maximum": "/items/unitPrice"
          },
          "rowTotal": {
            "type": "integer",
            "minimum": 0
          }
        },
        "allOf": [
          {
            "calculateAndCompare": {
              "operation": [
                {
                  "$p_data": "/unitPrice"
                },
                "-",
                {
                  "$p_data": "/discountAmount"
                }
              ],
              "compareValue": {
                "$p_data": "/price"
              },
              "err_msg": "price != unitPrice-discountAmount"
            }
          },
          {
            "calculateAndCompare": {
              "operation": [
                {
                  "$p_data": "/price"
                },
                "*",
                {
                  "$p_data": "/quantity"
                }
              ],
              "compareValue": {
                "$p_data": "/rowTotal"
              },
              "err_msg": "rowTotal != price*quantity"
            }
          }
        ]
      }
    }
  },
  "allOf": [
    {
      "oneOf": [
        {
          "properties": {
            "orderId": {
              "enum": [
                0,
                null
              ]
            },
            "orderCode": {
              "enum": [
                "0",
                "",
                null
              ]
            }
          }
        },
        {
          "properties": {
            "orderId": {
              "type": "integer",
              "minimum": 1
            },
            "orderCode": {
              "type": "string",
              "pattern": "^[1-9]\\d*"
            }
          }
        }
      ],
      "err_msg": " orderId va orderCode cung null/rong/0 hoac cung co gia tri"
    },
    {
      "oneOf": [
        {
          "properties": {
            "debtAmount": {
              "not": {
                "enum": [
                  0
                ]
              }
            },
            "codAmount": {
              "enum": [
                0
              ]
            }
          }
        },
        {
          "properties": {
            "debtAmount": {
              "enum": [
                0
              ]
            }
          }
        }
      ],
      "err_msg": "If debtAmount > 0, codAmount = 0"
    },
    {
      "oneOf": [
        {
          "properties": {
            "codAmount": {
              "not": {
                "enum": [
                  0
                ]
              }
            },
            "debtAmount": {
              "enum": [
                0
              ]
            }
          }
        },
        {
          "properties": {
            "codAmount": {
              "enum": [
                0
              ]
            }
          }
        }
      ],
      "err_msg": "If codAmount > 0, debtAmount = 0"
    },
    {
      "oneOf": [
        {
          "properties": {
            "debtAmount": {
              "not": {
                "enum": [
                  0
                ]
              }
            },
            "debtAccount": {
              "not": {
                "enum": [
                  "9999"
                ]
              }
            }
          }
        },
        {
          "properties": {
            "debtAmount": {
              "enum": [
                0
              ]
            }
          }
        }
      ],
      "err_msg": "If debtAmount > 0, debtAccount # 9999"
    }
  ]
}